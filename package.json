{
  "name": "orval-forge-workspaces",
  "version": "1.0.10",
  "private": true,
  "description": "OrvalForge monorepo workspace",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "turbo run build --filter='./packages/*'",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:run": "turbo run test:run --filter='./packages/*'",
    "lint": "eslint 'packages/*/src/**/*.ts' 'examples/*/usage-demo.ts'",
    "lint:fix": "eslint 'packages/*/src/**/*.ts' 'examples/*/usage-demo.ts' --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "clean:all": "pnpm clean && rm -rf node_modules",
    "release:create": "./scripts/create-release.sh",
    "release:check": "./scripts/check-publish.sh",
    "examples:build": "turbo run build --filter=./examples/*",
    "examples:test": "turbo run test --filter=./examples/*",
    "examples:dev": "turbo run dev --filter=./examples/*",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.3.0",
    "typescript": "~5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
