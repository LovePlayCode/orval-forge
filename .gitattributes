# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.npmrc text eol=lf

# Lock files (treat as binary to avoid conflicts)
pnpm-lock.yaml binary
package-lock.json binary
yarn.lock binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary

# Documents
*.pdf binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Exclude files from exporting (git archive)
.github export-ignore
.vscode export-ignore
tests export-ignore
examples export-ignore
docs export-ignore
scripts export-ignore
*.md export-ignore
.gitignore export-ignore
.gitattributes export-ignore
.editorconfig export-ignore
tsconfig.json export-ignore
turbo.json export-ignore
